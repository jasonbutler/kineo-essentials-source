<div class="menu-item-inner">
	<div class="menu-item-title">
		<h2 class="menu-item-title-inner">{{{title}}}</h2>
	</div>
	<div class="menu-item-body">
		<div class="menu-item-body-inner">{{{body}}}</div>
	</div>
	<div class="menu-item-button">
		<span class="menu-item-duration">Duration: {{{duration}}}</span>
	</div>
	{{#unless _isLocked}}
	<a class="menu-item-route" href="#/id/{{_id}}" class="{{#if _isVisited}}visited{{/if}}" aria-label="{{_accessibility._ariaLabels.menuViewButton}}">
		{{{linkText}}}
	</a>
	{{/unless}}
	{{#if _assessment}}
	<div class="menu-item-assement-details">
		<div class="menu-item-assement-details-inner">
			<div><b>Assessment Info:</b></div>
			<div><b>Completion status:</b> {{#if _assessment.isComplete}}Complete{{else}}Not Completed{{/if}} </div>
			{{#if _assessment.hasScore}}
				<div><b>Last Attempt Score:</b> {{_assessment.scoreAsPercentage}}%</div>
			{{/if}}
			<div><b>Passed status:</b> {{#if _assessment.isPassed}}Passed{{else}}Not Passed{{/if}} </div>
		</div>
	</div>
	{{/if}}
	<div class="menu-item-spacer"></div>
</div>